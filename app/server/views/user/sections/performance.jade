extends ../layout_user_two_columns

block user-content
	h1=result.title
	ul
		li
			h3="title: "
			p=result.title
		li
			h3="user: "
			=title
		li
			h3="imgage src: "
			=result.files[0].file
		li
			h3="text: "
			=result.text.en
		li
			h3="events: "
			//p=result.events[0].users[0].display_name

			-for(event in result.events)
				p=result.events[event].title

		li
			h3="Stats: "
			p="visits: "+result.stats.visits
			p="rate: "+result.stats.rates.stars
			p="total rates: "+result.stats.rates.tot_rate
		li
			h3="Categories: "
			//-p="Name: "+result.categories[0].name
			- for(category in result.categories)
				p=result.categories[category].name
		li
			h2="Users: "
			- for(user in result.users)
				ol
					li
						="name: "+result.users[user].display_name
					li
						="permalink: "+result.users[user].permalink
	.pre
		!=result
