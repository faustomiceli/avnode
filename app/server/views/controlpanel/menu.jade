nav.navbar.navbar-default
	.navbar-header
		.navbar-brand=result.display_name ? result.display_name : result.title ? result.title : activeChapter
		button.navbar-toggle.collapsed(data-toggle="collapse", data-target="#section-menu")
			i.fa.fa-bars
	#section-menu.collapse.navbar-collapse
		ul.nav.navbar-nav
			each section in config.controlpanel.chapters[activeChapter].sections
				if activeSection == section
					li.active
						a(href="/controlpanel/#{activeChapter}/#{section}")=__(section)
				else
					li
						a(href="/controlpanel/#{activeChapter}/#{section}")=__(section)
